const images = [
  {
    src: '../assets/hero_2.jpg',
    alt: 'Beautiful landscape',
    title: 'Mountain Vista'
  },
  {
    src: '../assets/hero_3.jpg',
    alt: 'City skyline',
    title: 'Urban Sunset'
  },
  {
    src: '../assets/hero_img.jpg',
    alt: 'Ocean waves',
    title: 'Coastal Beauty'
  },
  // Add more images...
];

const explainer = `
